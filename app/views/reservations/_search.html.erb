
<div class="error_date bg-danger">
    <span class="">日付を指定してください</span>
</div>
<% if @new_reservation.errors.any? %>
    <div class="bg-danger">
        <strong>入力内容をご確認ください</strong>
        <ul>
            <% @new_reservation.errors.each do |attr,msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_tag('reservations/list/',class: "form-inline reservation_form search_box") do %>
    <div class='input-group date' id='datetimepicker1'>
        <%= text_field_tag 'day',{}, placeholder: '2015/2/10 14:30',:class => 'form-control' %>
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
    <div class="form-group time">
        <%= select_tag 'time',options_for_select(@time),:prompt => '利用時間を選択',:class => 'form-control' %><span>時間</span>
    </div>
    <div class="form-group member">
        <%= select_tag 'member', options_for_select(@member),:class => 'form-control' %><span>人</span>
    </div>
    <div class="form-group content">
        <%= select_tag 'content', options_for_select(@content),:prompt => 'プランを選択',:class => 'form-control' %>
    </div>
    <div class="form-group search_btn">
        <%= button_to '空き状況を確認', {},class: "btn btn-default" %>
    </div>
<% end %>
<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker({
            format: 'YYYY/MM/DD HH:mm',
            stepping: 30
        });
    });
</script>
