

<p>入力内容をご確認ください。</p>

<%= form_for @reservation,:url => reservations_thanks_path do |f| %>
<% #binding.pry %>
<dl id="name" class="pure-g-r">
	<dt class="pure-u-1-4"><%= f.label 'お名前' %></dt>
  <dd class="pure-u-3-4"><%= f.hidden_field :name %><%= @reservation.name %></dd>
  <dt class="pure-u-1-4"><%= f.label 'メールアドレス' %></dt>
  <dd class="pure-u-3-4"><%= f.hidden_field :email %><%= @reservation.email %></dd>
  <dt class="pure-u-1-4"><%= f.label '日付' %></dt>
  <dd class="pure-u-3-4"><%= f.hidden_field :day %><%= @reservation.day.year %><span>年</span><%= @reservation.day.month %><span>月</span><%= @reservation.day.day %><span>日</span> <%= @reservation.day.hour %><span>:</span><%= @reservation.day.min %></dd>
  <dt class="pure-u-1-4"><%= f.label '時間' %></dt>
  <dd class="pure-u-3-4"><%= f.hidden_field :time %><%= @reservation.time.hour %><span>時間</span></dd>
  <dt class="pure-u-1-4"><%= f.label '人数' %></dt>
  <dd class="pure-u-3-4"><%= f.hidden_field :member %><%= @reservation.member %><span>人</span></dd>
  <dt class="pure-u-1-4"><%= f.label '内容' %></dt>
  <dd class="pure-u-3-4"><%= f.hidden_field :content %><%= @reservation.content %></dd>
</dl>

<p>
<%= f.submit '送信' %>
</p>
<% end %>

