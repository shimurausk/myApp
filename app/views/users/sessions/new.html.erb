
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2 class="form-signin-heading">Log in</h2>
  <%= devise_error_messages! %>
  <div class="devise">
    <%= f.label :username,:class => 'sr-only' %>
    <%= f.text_field :username, autofocus: true,:class => 'form-control',:placeholder => 'Username' %>

    <%= f.label :password,:class => 'sr-only' %>
    <%= f.password_field :password, autocomplete: "off",:class => 'form-control',:placeholder => 'Password' %>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Log in",:class => 'btn btn-lg btn-primary btn-block' %></div>
    </div>
    <p class="checkbox"><%= render "devise/shared/links" %></p>
  
<% end %>