<% if user_signed_in? %>
<%= render 'layouts/header' %>
<section>
  <div class="contents staff row">
  	<div class="tbar"><span>スタッフ詳細</span><%= link_to '編集',edit_staff_path,class:'btn btn-primary' %> <%= link_to '削除',staff_path,class:'btn btn-warning',method: :delete, data:{confirm:'削除します。よろしいですか？'} %></div>
		<table class="staff_table">
				<tr>
					<th>名前</th>
					<th>メール</th>
					<th>住所</th>
					<th>年齢</th>
					<th>役職</th>
					<th>備考</th>
					<th>時給</th>
				</tr>
				<tr>
					<td><%= @staff.name %> <%= image_tag(@staff.icon, :size => "16x16") %></td>
					<td><%= @staff.email %></td>
					<td><%= @staff.address %></td>
					<td><%= @staff.age %></td>
					<td><%= @staff.post %></td>
					<td><%= @staff.memo %></td>
					<td><%= @staff.hourlywage %></td>
				</tr>
		</table>
		

		<div class="sch detail">
			<%= render 'detail' %>
		</div>
	</div>
	<%= render 'layouts/footer' %>
	<% end %>