<%= render 'header' %>

<section>
  <div class="contents pure-g">
    <div class="postslist pure-u-2-3">
		<article>
			<div class="post">
		      <h2><%= @blog.title %></h2><span><%= @blog.updated_at %></span>
		      <div class="box"><%= image_tag @blog.avatar.url %> <%= @blog.text %></div>
		      <div class="comment">
		      	<h3>Comments</h3>
		        <%#= render @blog.comments  %>
				<h3>Add a comment:</h3>
				<%#= render 'comments/form' %>
		    </div>
		</article>
    </div>
    <div class="sidenavi pure-u-1-3">
      <%= render 'side' %>
    </div>
  </div>
</section>

<%= render 'footer' %>
