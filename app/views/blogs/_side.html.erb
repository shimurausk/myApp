<aside>
  <div class="side">
	  <div class="search">
	  	<form action="">
		  	<input type="text" placeholder="検索">
		  	<button type="submit" class="btn btn-default">Search</button>
	  	</form>
	  </div>
	  <div class="box">
	  	<h3>Category</h3>
	    <ul>
		  	<% @blogs_category.each do |c| %>
	      <li><%= link_to c, category_path(c) %></li>
	      <% end %>
	    </ul>
	  </div>
	  <div class="box">
	  	<h3>Tag</h3>
	    <div class="tag_cloud">
			<% tag_cloud Blog.tag_counts, %W[s m l] do |t,css_class| %>
				<%= link_to t.name, tag_path(t.name), class: css_class %>
			<% end %>
	    </div>
	  </div>
	  
  </div>
</aside>