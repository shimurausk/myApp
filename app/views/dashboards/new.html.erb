<% if user_signed_in? %>
<div class="dash">
	<div class="title">
		<h2>Dashboard<strong>:<%= current_user.email %></strong></h2>
	</div>

		<h3>シフト登録</h3>
		<% if @new_work.errors.any? %>
		    <div class="bg-danger">
		        <strong>入力内容をご確認ください</strong>
		        <ul class="error">
		            <% @new_work.errors.each do |attr,msg| %>
		                <li><%= msg %></li>
		            <% end %>
		        </ul>
		    </div>
		<% end %>

	<%= form_for @new_work,:url => dashboards_confirm_path,html:{class:"form-inline"} do |f| %>

	    <%= f.hidden_field :staff_id,:value => 3 %>
			
	    <!-- Work(id: integer, date: datetime, start: datetime, end: datetime, break: datetime, staff_id: integer, created_at: datetime, updated_at: datetime) -->
			
	    <!-- 2週間分を登録申請 -->
	    <% @days.each do |day| %>
		    <!-- <div class='input-group date' id='datetimepicker1'>
		        <%#= f.text_field :date, data: { :date_format => 'YYYY/MM/DD hh:mm' }, :class => 'form-control', placeholder: '2015/2/10 14:30' %>
		        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
		    </div> -->
		    <div class="block">
			    <div class='input-group date'>
				    <%= day[0].strftime('%Y-%m-%d') %>
				    <%= f.hidden_field :date,:value => day[0].strftime('%Y-%m-%d') %>
			    </div>
			    <div class="form-group time">
			    	<%= f.select :start,options_for_select(@worktimes,:selected => @new_work.start.to_s),{:prompt => '開始時間を選択'}, {:class => 'form-control'} %>
			    </div>
			    <div class="form-group time">
			    	<%= f.select :end,options_for_select(@worktimes,:selected => @new_work.start.to_s),{:prompt => '終了時間を選択'}, {:class => 'form-control'} %>
			    </div>
		    </div>
		    <%= f.hidden_field :break,:value => (day[0]+1.hour).strftime('%Y-%m-%d %H:%M') %>
			<% end %>

	    <div type="submit" class="form-group tac">
	        <%= f.submit '確認画面へ',class:"btn btn-default" %>
	    </div>
	<% end %>
</div>
<% end %>