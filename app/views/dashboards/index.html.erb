<% if user_signed_in? %>
<h2>Dashboard</h2>

	<h3>シフト登録</h3>
	<%# if @work.errors.any? %>
	    <div class="bg-danger">
	        <strong>入力内容をご確認ください</strong>
	        <ul class="error">
	            <%# @work.errors.each do |attr,msg| %>
	                <li><%#= msg %></li>
	            <%# end %>
	        </ul>
	    </div>
	<%# end %>

	<%= form_for @new_work,:url => dashboards_confirm_path,html:{class:"form-group work_form"} do |f| %>

	    <%= f.hidden_field :name,:value => params[:name] %>
	    <%= f.hidden_field :email,:value => params[:email] %>
	    
	    <div class='input-group date' id='datetimepicker1'>
	        <%= f.text_field :date, data: { :date_format => 'YYYY/MM/DD hh:mm' }, :class => 'form-control', placeholder: '2015/2/10 14:30' %>
	        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
	    </div>
	    <div class="form-group time">
	        <%= f.select :start,businessHours(10,20), {:selected => @new_work.start.to_s,:prompt => '開始時間を選択'}, { :class => 'form-control'} %>
	    </div>
	    <div class="form-group time">
	        <%= f.select :end,businessHours(10,20), {:selected => @new_work.end.to_s,:prompt => '終了時間を選択'}, { :class => 'form-control'} %>
	    </div>

	    <div type="submit" class="form-group tac">
	        <%= f.submit '確認画面へ',class:"btn btn-default" %>
	    </div>
	<% end %>

<% end %>