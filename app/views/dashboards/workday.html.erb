<% if user_signed_in? %>
<div class="dash">
	<div class="title">
		<h2>Dashboard<strong>:<%= current_user.email %></strong></h2>
	</div>

		<h3>シフト登録</h3>
		<% if @new_work.errors.any? %>
		    <div class="bg-danger">
		        <strong>入力内容をご確認ください</strong>
		        <ul class="error">
		            <% @new_work.errors.each do |attr,msg| %>
		                <li><%= msg %></li>
		            <% end %>
		        </ul>
		    </div>
		<% end %>

	<%= form_for @new_work,:url => dashboards_confirm_path,html:{class:"form-inline"} do |f| %>

	    <%= f.hidden_field :staff_id,:value => 3 %>
		    <div class="block">
			    <div class='input-group date'>
				    <%= @new_work.date.strftime('%Y-%m-%d') %>
				    <%= f.hidden_field :date,:value => @new_work.date.strftime('%Y-%m-%d') %>
			    </div>
			    <div class="form-group time">
			    	<%= f.select :start,options_for_select(@worktimes,:selected => @new_work.start.to_s),{:prompt => '開始時間を選択'}, {:class => 'form-control'} %>
			    </div>
			    <div class="form-group time">
			    	<%= f.select :end,options_for_select(@worktimes,:selected => @new_work.start.to_s),{:prompt => '終了時間を選択'}, {:class => 'form-control'} %>
			    </div>
			    <div type="submit" class="form-group">
					  <%= f.hidden_field :break,:value => (@new_work.date+1.hour).strftime('%Y-%m-%d %H:%M') %>
			      <%= f.submit '確認画面へ',class:"btn btn-default" %>
			    </div>
		    </div>
	<% end %>
	
</div>
<% end %>